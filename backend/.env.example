# ============================================
# CryptoPayX Backend Environment Configuration
# ============================================
# Copy this file to .env and update the values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/cryptopayx

# Redis configuration (optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure random string for production
# You can use: openssl rand -hex 64
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Local blockchain (Ganache)
BLOCKCHAIN_RPC_URL=http://localhost:7545
NETWORK_ID=5777
CHAIN_ID=1337

# Smart contract addresses (set after deployment)
TOKEN_CONTRACT_ADDRESS=
PAYMENT_GATEWAY_CONTRACT_ADDRESS=

# ============================================
# INFURA CONFIGURATION (For Testnet/Mainnet)
# ============================================
# Get your project ID from: https://infura.io/
INFURA_PROJECT_ID=your_infura_project_id_here

# Wallet mnemonic for contract deployment (12 words)
# NEVER commit this to version control in production!
MNEMONIC=your twelve word mnemonic phrase goes here for contract deployment

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Email service for notifications
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# SendGrid API key (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size for uploads
MAX_FILE_SIZE=10MB

# Upload directory
UPLOAD_PATH=uploads/

# Allowed file types
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
# Google Analytics tracking ID
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# THIRD-PARTY SERVICES (Optional)
# ============================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
# CoinGecko API for price data
COINGECKO_API_KEY=your_coingecko_api_key

# Etherscan API for transaction verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=debug

# Enable API documentation
ENABLE_API_DOCS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Set to true in production for additional security
ENABLE_HTTPS_REDIRECT=false

# Session secret for production
SESSION_SECRET=your_session_secret_for_production

# Database SSL (set to true for production databases)
DB_SSL=false

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_MERCHANT_VERIFICATION=true
ENABLE_API_RATE_LIMITING=true

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================
# Socket.io settings
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000