# ============================================
# CryptoPayX Frontend Environment Configuration
# ============================================
# Copy this file to .env and update the values

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
REACT_APP_API_URL=http://localhost:5000/api

# WebSocket URL for real-time updates
REACT_APP_SOCKET_URL=http://localhost:5000

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Application name and version
REACT_APP_APP_NAME=CryptoPayX
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_DESCRIPTION=Decentralized Payment & Wallet Platform

# Application URLs
REACT_APP_WEBSITE_URL=https://cryptopayx.com
REACT_APP_SUPPORT_EMAIL=support@cryptopayx.com

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Network configuration
REACT_APP_NETWORK_ID=5777
REACT_APP_CHAIN_ID=1337
REACT_APP_NETWORK_NAME=Ganache Local

# RPC URLs for different networks
REACT_APP_LOCAL_RPC_URL=http://localhost:7545
REACT_APP_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
REACT_APP_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Smart contract addresses (set after deployment)
REACT_APP_TOKEN_CONTRACT_ADDRESS=
REACT_APP_PAYMENT_GATEWAY_CONTRACT_ADDRESS=

# ============================================
# WALLET CONFIGURATION
# ============================================
# Supported wallets
REACT_APP_SUPPORTED_WALLETS=metamask,walletconnect

# Default gas settings
REACT_APP_DEFAULT_GAS_PRICE=20
REACT_APP_DEFAULT_GAS_LIMIT=21000

# Transaction settings
REACT_APP_TRANSACTION_TIMEOUT=300000
REACT_APP_CONFIRMATION_BLOCKS=1

# ============================================
# UI/UX CONFIGURATION
# ============================================
# Theme settings
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Language settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de,ja,ko,zh

# Currency display
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_MERCHANT_FEATURES=true
REACT_APP_ENABLE_MULTI_LANGUAGE=true

# Development features
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_REACT_QUERY_DEVTOOLS=true

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_GOOGLE_TAG_MANAGER_ID=

# Error tracking
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development

# Performance monitoring
REACT_APP_ENABLE_WEB_VITALS=true

# ============================================
# SOCIAL & SHARING
# ============================================
# Social media links
REACT_APP_TWITTER_URL=https://twitter.com/cryptopayx
REACT_APP_DISCORD_URL=https://discord.gg/cryptopayx
REACT_APP_TELEGRAM_URL=https://t.me/cryptopayx
REACT_APP_GITHUB_URL=https://github.com/cryptopayx

# Open Graph meta tags
REACT_APP_OG_IMAGE=https://cryptopayx.com/og-image.png
REACT_APP_OG_DESCRIPTION=Secure, fast, and decentralized cryptocurrency payments

# ============================================
# EXTERNAL SERVICES
# ============================================
# Map services
REACT_APP_GOOGLE_MAPS_API_KEY=

# Image services
REACT_APP_CLOUDINARY_CLOUD_NAME=
REACT_APP_CLOUDINARY_UPLOAD_PRESET=

# Chat/Support
REACT_APP_INTERCOM_APP_ID=
REACT_APP_ZENDESK_KEY=

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Content Security Policy
REACT_APP_CSP_REPORT_URI=https://cryptopayx.report-uri.com/r/d/csp/enforce

# API Security
REACT_APP_API_TIMEOUT=30000
REACT_APP_MAX_RETRY_ATTEMPTS=3

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
# Development server settings
REACT_APP_DEV_SERVER_PORT=3000
REACT_APP_DEV_SERVER_HOST=localhost

# Hot reload settings
REACT_APP_FAST_REFRESH=true

# Source maps
GENERATE_SOURCEMAP=true

# Bundle analyzer
REACT_APP_BUNDLE_ANALYZER=false

# ============================================
# BUILD CONFIGURATION
# ============================================
# Build optimization
REACT_APP_OPTIMIZE_IMAGES=true
REACT_APP_MINIFY_CODE=true
REACT_APP_TREE_SHAKE=true

# Cache settings
REACT_APP_CACHE_ASSETS=true
REACT_APP_CACHE_API_RESPONSES=true

# ============================================
# PAYMENT CONFIGURATION
# ============================================
# Payment settings
REACT_APP_MIN_PAYMENT_AMOUNT=0.001
REACT_APP_MAX_PAYMENT_AMOUNT=1000000
REACT_APP_DEFAULT_PAYMENT_CURRENCY=ETH

# Fee settings
REACT_APP_PLATFORM_FEE_PERCENTAGE=1.0
REACT_APP_SHOW_GAS_ESTIMATES=true

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
# Push notifications
REACT_APP_VAPID_PUBLIC_KEY=
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true

# Email notifications
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# ACCESSIBILITY & PERFORMANCE
# ============================================
# Accessibility settings
REACT_APP_ENABLE_SCREEN_READER=true
REACT_APP_ENABLE_HIGH_CONTRAST=true

# Performance settings
REACT_APP_LAZY_LOAD_IMAGES=true
REACT_APP_PRELOAD_CRITICAL_RESOURCES=true
REACT_APP_ENABLE_SERVICE_WORKER=true